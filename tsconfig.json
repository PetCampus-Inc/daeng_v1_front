{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },

  /* Path aliases */
  "baseUrl": ".",
  "paths": {
    "@/*": ["./src/*"],
    "@components/*": ["./src/components/*"],
    "@hooks/*": ["./src/hooks/*"],
    "@pages/*": ["./src/pages/*"],
    "@styles/*": ["./src/styles/*"],
    "@constants/*": ["./src/constants/*"],
    "@assets/*": ["./src/assets/*"],
    "@apis/*": ["./src/apis/*"],
    "@router/*": ["./src/router/*"],
    "@utils/*": ["./src/utils/*"],
    "@type/*": ["./src/types/*"],
    "@store/*": ["./src/store/*"],
    "@libs/*": ["./src/libs/*"]
  },

  "include": ["src", ".eslintrc.cjs"]
}
