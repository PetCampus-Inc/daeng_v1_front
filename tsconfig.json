{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "~": ["*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "pages/*": ["pages/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "types/*": ["types/*"],
      "assets/*": ["assets/*"],
      "store/*": ["store/*"],
      "routes/*": ["routes/*"],
      "apis/*": ["apis/*"],
      "constants/*": ["constants/*"],
      "context/*": ["context/*"],
      "libs/*": ["libs/*"]
    }
  },

  "include": ["src", ".eslintrc.cjs"]
}
